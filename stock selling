#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define ff first
#define ss second
#define pb push_back
#define endl "\n"
#define fast ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
ll arr[200000];
ll dp[105][105][2];
ll n,k;
				ll solve(ll index,ll prev,ll trans)
				{
					if(index>n)
					return 0;

					if(trans==k)
					return 0;


					if(dp[index][trans][prev]!=-1)
					return dp[index][trans][prev];

					ll op1=solve(index+1,prev,trans);  //kuch nhi kiya
					ll op2=LLONG_MIN;

					if(prev==1) //pehle khareeda hu
					{
						//sell kiya
						op2=arr[index]+solve(index+1,0,trans+1);
					}
					else
					{	
						//buy kiya
						op2=solve(index+1,1,trans)-arr[index];
					}
				//	cout<<id<<" "<<index<<" "<<max(op1,op2)<<endl;
					return dp[index][trans][prev]=max(op1,op2);
				}
			
		
	   
int main() {
			fast
			// #ifndef ONLINE_JUDGE
			// freopen("input.txt","r",stdin);
			// freopen("output.txt","w",stdout);
			// #endif	

			ll t;
			cin>>t;
			while(t--)
			{
				
				cin>>k>>n;
				
				for(ll i=1;i<=n;i++)
				{
					cin>>arr[i];
				}
				// for(ll i=1;i<=n;i++)
				// cout<<k<<" "<<n<<" "<<arr[i]<<endl;
				memset(dp,-1,sizeof(dp));
				// cout<<k<<endl;
				cout<<solve(1,0,0)<<endl;

				// for(ll i=1;i<=n;i++)
				// {
				// 	cout<<dp[i][1][0]<<" "<<dp[i][1][1]<<endl;
				// }
				
			


			}


			

			return 0;
		 }	
